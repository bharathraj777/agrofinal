# Database
MONGODB_URI=mongodb://localhost:27017/agriculture_db
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# FREE API Keys (Get these from the services - all have free tiers)
# Weather: OpenWeatherMap (1,000 calls/day free)
OPENWEATHER_API_KEY=your-openweather-api-key

# Geocoding/Maps: OpenCage Geocoder (2,500 calls/day free)
OPENCAGE_API_KEY=your-opencage-api-key

# Maps: Leaflet + OpenStreetMap (completely free)
# No API key needed for basic maps

# Email: Choose ONE option
# Option 1: EmailJS (free tier - 200 emails/month)
EMAILJS_PUBLIC_KEY=your-emailjs-public-key
EMAILJS_SERVICE_ID=your-emailjs-service-id
EMAILJS_TEMPLATE_ID=your-emailjs-template-id

# Option 2: SendGrid (100 emails/day free)
SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: Gmail SMTP (free)
EMAIL_FROM=noreply@agriculture-app.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Market Price Data: Agmarknet (free government API)
# No API key needed for public data

# Email Configuration
EMAIL_FROM=noreply@agriculture-app.com

# Map Provider Selection
MAP_PROVIDER=leaflet # Options: leaflet (free), opencage (free)

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# Development
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info